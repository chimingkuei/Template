<UserControl x:Class="ControlsNexus.BuildingBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsNexus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="Canvas1" Background="LightGray" AllowDrop="True" DragEnter="Canvas1_DragEnter" Drop="Canvas1_Drop" Margin="0,0,400,0">
            <Button x:Name="DraggableButton" Content="Drag Me" Width="100" Height="50" PreviewMouseLeftButtonDown="DraggableButton_PreviewMouseLeftButtonDown" Canvas.Left="50" Canvas.Top="50"/>
        </Canvas>
        <Canvas x:Name="Canvas2" Background="LightBlue" AllowDrop="True" DragEnter="Canvas2_DragEnter" Drop="Canvas2_Drop" Margin="400,0,0,0"/>
    </Grid>
</UserControl>
