<Window x:Class="ControlsNexus.DiskClean"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlsNexus"
        mc:Ignorable="d"
        Closing="WindowClosing" 
        ResizeMode="CanMinimize"
        Title="DiskClean" Height="500" Width="800" Background="#FF3E6FB3" Loaded="Window_Loaded">
    <Window.Resources>
        <!-- DataGrid 欄位文字置中 -->
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <!-- DataGrid 標頭文字置中 -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Schedule" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False" Margin="4,2,4,1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" ElementStyle="{StaticResource CenterTextStyle}" Width="50"/>
                <DataGridCheckBoxColumn Header="Act" Binding="{Binding Act}" Width="50"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" ElementStyle="{StaticResource CenterTextStyle}" Width="150"/>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" ElementStyle="{StaticResource CenterTextStyle}" Width="150"/>
                <DataGridTextColumn Header="Directory" Binding="{Binding Directory}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10" Width="784">
            <Button x:Name="Add" Style="{StaticResource BaseButton}" Content="ADD" Height="38" Width="84" Margin="10,0"/>
            <Button x:Name="Modify" Style="{StaticResource BaseButton}" Content="MODIFY" Height="38" Width="84" Margin="10,0"/>
            <Button x:Name="Delete" Style="{StaticResource BaseButton}" Content="DELETE" Height="38" Width="84" Margin="10,0"/>
            <Button x:Name="Set" Style="{StaticResource BaseButton}" Content="SET" Height="38" Width="84" Margin="270,0,10,0"/>
            <Button x:Name="Save" Style="{StaticResource BaseButton}" Content="SAVE" Height="38" Width="84" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
