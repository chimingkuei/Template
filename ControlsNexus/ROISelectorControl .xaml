<UserControl x:Class="ControlsNexus.ROISelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsNexus"
             mc:Ignorable="d" 
             d:DesignHeight="501" d:DesignWidth="680">
    <Grid x:Name="Grid" MouseDown="DrawROI_MouseDown" MouseUp="DrawROI_MouseUp" MouseMove="DrawROI_MouseMove" Margin="11,3,2,10">
        <Image x:Name="Display_Screen" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="2,0,2,-3"/>
        <!--<Ellipse x:Name="Ellipse" StrokeThickness="2" Stroke="Red" Margin="234,112,175,137"/>-->
        <Rectangle x:Name="Rectangle" StrokeThickness="2" Stroke="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="137,251,0,0" Height="80" Width="80"/>
    </Grid>
</UserControl>
