<Application x:Class="Template.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Template"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI\ButtonStyles.xaml"/>
                <ResourceDictionary Source="UI\CheckBoxStyles.xaml"/>
                <ResourceDictionary Source="UI\ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="UI\GroupBoxStyles.xaml"/>
                <ResourceDictionary Source="UI\RadioButtonStyles.xaml"/>
                <ResourceDictionary Source="UI\SliderStyles.xaml"/>
                <ResourceDictionary Source="UI\TabControlStyles.xaml"/>
                <ResourceDictionary Source="UI\TextBoxStyles.xaml"/>
                <ResourceDictionary Source="UI\ToggleButtonStyles.xaml"/>
                <ResourceDictionary Source = "Lang/zh-TW.xaml"/>
                <ResourceDictionary Source = "Lang/zh-CN.xaml"/>
                <ResourceDictionary Source = "Lang/en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
