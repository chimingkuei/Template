<Window x:Class="Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:controls="clr-namespace:ControlsNexus;assembly=ControlsNexus"
        xmlns:chartcontrols="clr-namespace:ControlsNexus.Chart;assembly=ControlsNexus"
        xmlns:local="clr-namespace:Template"
        mc:Ignorable="d"
        Closing="WindowClosing" 
        ResizeMode="CanMinimize"
        Title="Template" Height="700" Width="1000" Background="#FF3E6FB3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <RoutedCommand x:Key="ShortcutKey"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="1" Grid.Column="1" x:Name="Logo"  Margin="18,37,0,0" HorizontalAlignment="Left" Height="141" VerticalAlignment="Top" Width="159" Source="Icon/DeepWise.png"/>
        <TabControl Grid.Row="1" Grid.Column="0" x:Name="Log" HorizontalAlignment="Left" Height="175" VerticalAlignment="Top" Width="790" Background="#FFE6F0FF">
            <TabControl.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="DockPanel.Dock" Value="Bottom" />
                </Style>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="FontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="一般" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxGeneral" Background="#FF43B5BF"/>
            </TabItem>
            <TabItem Header="警告" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxWarning" Background="#FF43AABF"/>
            </TabItem>
            <TabItem Header="錯誤" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxError" Background="#FF43A0BF"/>
            </TabItem>
            <TabItem Header="除錯" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxDebug" Background="#FF4396BF"/>
            </TabItem>
        </TabControl>
        <TabControl Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="491" Width="992" Background="#FFE6F0FF">
            <TabItem Header="主畫面" Style="{StaticResource BaseTabcontrol}">
                <TabItem.CommandBindings>
                    <CommandBinding Command="{StaticResource ShortcutKey}" Executed="CommandBinding_ShortcutKey"/>
                </TabItem.CommandBindings>
                <TabItem.InputBindings>
                    <KeyBinding Key="c" Modifiers="Control" Command="{StaticResource ShortcutKey}"/>
                </TabItem.InputBindings>
                <Grid>
                    <Button x:Name="Demo" Style="{StaticResource CircleButton}" Margin="814,64,69,296" Content="Demo" FontSize="18" Height="100" Width="100" Click="Main_Btn_Click"/>
                    <TextBox x:Name="Parameter1" Style="{StaticResource BaseTextBox}" Tag="請輸入內容..." Margin="806,203,67,216"/>
                    <TextBox x:Name="Parameter2" Style="{StaticResource BaseTextBox}" Tag="請輸入內容..." Margin="806,277,67,143"/>
                    <WindowsFormsHost  Margin="16,18,234,15">
                        <wf:PictureBox x:Name="Display_Windows" BorderStyle="FixedSingle"/>
                    </WindowsFormsHost>
                    <controls:IndicatorLight x:Name="IndicatorLight" LightColor="LightGray" Width="32" Height="32" Margin="837,361,103,53"/>
                </Grid>
            </TabItem>
            <TabItem Header="參數畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>

                </Grid>
            </TabItem>
            <TabItem Header="關於" Style="{StaticResource BaseTabcontrol}" PreviewMouseLeftButtonDown="About_Click"/>
        </TabControl>
    </Grid>
</Window>
